# hooks.json
# nwgat.ninja
# https://nwgat.ninja/mailboxninja
[
  {
    "id": "mailninja",
    "execute-command": "./mail.sh yourmail@email.com",
    "response-message": "Executing mailninja webhook...",
    "trigger-rule":
    {
      "match":
      {
        "type": "value",
        "value": "42",
        "parameter":
        {
          "source": "url",
          "name": "token"
        }
      }
    }
  }
]
